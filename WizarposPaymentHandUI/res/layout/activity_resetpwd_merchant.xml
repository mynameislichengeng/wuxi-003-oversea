<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="9"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:id="@+id/main_menu"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:weightSum="2"
	    android:orientation="vertical"
	    >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:weightSum="5"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="50dp"
	        android:gravity="center"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_weight="1.5"
	            android:layout_height="match_parent"
	            android:background="@null"
	            android:gravity="right|center_vertical"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:textColor="#666666"
	            android:text="新密码:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/et_input_selector"
                android:imeOptions="actionNext"
                android:maxLength="8"
                android:password="true"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:weightSum="5"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="50dp"
	        android:gravity="center"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_weight="1.5"
	            android:layout_height="match_parent"
	            android:background="@null"
	            android:gravity="right|center_vertical"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:textColor="#666666"
	            android:text="确认新密码:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_new_password_confirm"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/et_input_selector"
                android:imeOptions="actionNext"
                android:password="true"
                android:maxLength="8"
                android:textSize="15sp" />
	    </LinearLayout>
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#e5e5e5"/>
	</LinearLayout>    
	<RelativeLayout
	    android:id="@+id/main_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="7"
	    android:background="#f8f8f8"
	    >
	    
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="50dp"
		    android:gravity="center">
		    <TextView 
		        android:id="@+id/btn_reset_pwd"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="20dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingLeft="40dp"
		        android:paddingRight="40dp"
		        android:singleLine="true"
		        android:textColor="#ffffff"
		        android:background="@drawable/btn_merchant_blue_selector"
		        android:text="确定"/>
		    <TextView 
		        android:id="@+id/btn_cancle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingLeft="40dp"
		        android:paddingRight="40dp"
		        android:singleLine="true"
		        android:textColor="#666666"
		        android:background="@drawable/btn_merchant_grey_selector"
		        android:text="取消"/>
		</LinearLayout>
	</RelativeLayout>    
</LinearLayout>