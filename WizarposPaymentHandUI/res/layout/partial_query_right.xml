<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llDrawer"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="20dp"
                        android:text="@string/type"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingRight="20dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <com.wizarpos.pay.ui.newui.util.MostItemGridView
                        android:id="@+id/gvTranType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3"
                        android:scrollbars="none" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />

                <LinearLayout
                    android:id="@+id/llTimeRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="20dp"
                            android:text="@string/date"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <com.wizarpos.pay.ui.newui.util.MostItemGridView
                            android:id="@+id/gvTimeRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="3"
                            android:scrollbars="none" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />

                <LinearLayout
                    android:id="@+id/llTimeChoose"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/llstartTime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="20dp"
                            android:text="@string/start_date"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etStartTime"
                            style="@null"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableRight="@drawable/ic_date_choose"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:textColor="#0074e1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D8D8D8" />

                    <LinearLayout
                        android:id="@+id/llEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="20dp"
                            android:text="@string/end_date"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etEndTime"
                            style="@null"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableRight="@drawable/ic_date_choose"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:textColor="#0074e1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D8D8D8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTranLogId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="20dp"
                            android:text="@string/receipt_number_show"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:text="" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_bg_line_frame_color_grey_corner5">

                        <TextView
                            android:id="@+id/tranlog_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/tranlog_tag"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/tranlog_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tranlog_tag"
                            android:background="@color/line_gray" />

                        <org.angmarch.spinner.lib.NiceSpinner
                            android:id="@+id/nice_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_toRightOf="@id/tranlog_line"
                            android:paddingLeft="10dp"
                            android:paddingTop="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="dasdasd"
                            android:textSize="14sp"
                            app:backgroundSelector="@drawable/selector_bg_white_press_blue_conner_right5"
                            app:hideArrow="true"
                            app:popupTextAlignment="start"
                            app:textTint="#666666" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_bg_line_frame_color_grey_corner5">

                        <TextView
                            android:id="@+id/tranlog_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="--"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/tranlogvalue_line"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tranlog_value"

                            android:background="@color/line_gray" />

                        <EditText
                            android:id="@+id/etTranLogId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tranlogvalue_line"
                            android:background="@drawable/selector_edittext_press_blue_coner_right5"
                            android:hint="@string/enter_receipt_number"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />

                <LinearLayout
                    android:id="@+id/linInvoiceNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="20dp"
                            android:text="@string/invoice_num"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:text="" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etInvoiceNo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext_selector"
                        android:hint="@string/hint_enter_invoice_num"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvResetQuery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_color_white"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="#0074e1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvQuery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_corner"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tvQRScan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_blue_corner"
            android:gravity="center"
            android:text="@string/query_qr_scan"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>