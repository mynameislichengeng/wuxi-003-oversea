<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3" >

    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center" >

            <EditText
                android:id="@+id/etSignOnOptCode"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/et_input_selector"
                android:hint="请输入操作员"
                android:inputType="text"
                android:paddingLeft="40dp"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/et_operator_account"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_user"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <EditText
                android:id="@+id/etSignOnPwd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/et_input_selector"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="40dp"
                android:textSize="15sp" >
            </EditText>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/et_password"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_psw"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="签到"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_reprint_cashier_selector" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>