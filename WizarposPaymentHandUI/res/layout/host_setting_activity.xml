<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/host_setting_main_meun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:text="@string/host_address"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_host_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="@drawable/et_input_selector"
            android:editable="false"
            android:enabled="false"
            android:hint=""
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:text="@string/host_port"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_host_port"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="@drawable/et_input_selector"
            android:editable="false"
            android:enabled="false"
            android:hint=""
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_host_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/orange_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvServerVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/orange_color" />

        <TextView
            android:id="@+id/tvChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/orange_color" />

        <Button
            android:id="@+id/btn_host_setting_confirm"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_ok" />
    </LinearLayout>

</ScrollView>