<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="9"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/main_menu"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4"
	    android:weightSum="4"
	    android:orientation="vertical"
	    >
	    <LinearLayout
	        android:id="@+id/llMenuMid"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:weightSum="5"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="30dp"
	        android:gravity="center"
	        >
	        <TextView
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:background="@null"
	            android:gravity="right|center_vertical"
	            android:layout_marginRight="5dp"
	            android:textColor="#666666"
	            android:text="商户号:"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_merchant_id"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="15dp"
                android:gravity="left|center_vertical"
                android:textColor="#ff4800"
                android:textSize="15sp"  />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:weightSum="5"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="30dp"
	        android:gravity="center"
	        >
	        <TextView
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:background="@null"
	            android:gravity="right|center_vertical"
	            android:layout_marginRight="5dp"
	            android:textColor="#666666"
	            android:text="登录名:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_account_login_name"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/et_input_selector"
                android:imeOptions="actionNext"
                android:maxLength="11"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:weightSum="5"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="30dp"
	        android:gravity="center"
	        >
	        <TextView
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:background="@null"
	            android:gravity="right|center_vertical"
	            android:layout_marginRight="5dp"
	            android:textColor="#666666"
	            android:text="密码:"/>
            <EditText
                android:id="@+id/et_account_password"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:gravity="left|center_vertical"
                android:password="true"
                android:background="@drawable/et_input_selector"
                android:imeOptions="actionNext"
                android:maxLength="8"
                android:textSize="15sp" />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:weightSum="5"
	        android:paddingLeft="20dp"
	        android:paddingRight="40dp"
	        android:gravity="center_vertical|right"
	        >
	        <CheckBox
	            android:id="@+id/cb_issavepwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#888888"
	            android:layout_marginRight="20dp"
	            android:drawableLeft="@drawable/cb_merchant_selector"
	            android:drawablePadding="5dp"
	            android:button="@null"
	            android:text="保存密码" />
	        <CheckBox
	            android:id="@+id/cb_auto_login"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#888888"
	            android:drawableLeft="@drawable/cb_merchant_selector"
	            android:drawablePadding="5dp"
	            android:button="@null"
	            android:text="自动登录" />
	    </LinearLayout>
	</LinearLayout>

	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#e5e5e5"/>
	
	<RelativeLayout
	    android:id="@+id/main_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="5"
	    android:background="#f8f8f8"
	    >
	    <TextView 
	        android:id="@+id/tv_forget_pwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_margin="10dp"
	        android:text="忘记密码"
	        android:textColor="#aaaaaa"
	        />
	    <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/tv_forget_pwd"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="登陆"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_merchant_blue_selector" />
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_marginBottom="50dp"
		    android:gravity="center_vertical">
		    <Button 
		        android:id="@+id/btn_addto_merchant"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minWidth="100dp"
            	android:layout_marginLeft="40dp"
            	android:padding="5dp"
            	android:gravity="center"
            	android:layout_alignParentLeft="true"
		        android:singleLine="true"
		        android:textColor="#666666"
		        android:background="@drawable/btn_merchant_grey_selector"
		        android:textSize="14sp"
		        android:text="加入已有商户"/>
		    <Button 
		        android:id="@+id/btn_new_merchant"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minWidth="100dp"
            	android:layout_marginRight="40dp"
            	android:padding="5dp"
            	android:gravity="center"
            	android:layout_alignParentRight="true"
		        android:singleLine="true"
		        android:textColor="#666666"
		        android:background="@drawable/btn_merchant_grey_selector"
		        android:textSize="14sp"
		        android:text="新商户申请"/>
		</RelativeLayout>
	</RelativeLayout>    

</LinearLayout>