<?xml version="1.0" encoding="utf-8"?>
<com.wizarpos.pay.view.precent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3" >

    <LinearLayout
        android:id="@+id/llKeyboardMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
		android:background="@color/white">

        <LinearLayout
            android:id="@+id/llLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llNumsTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/iv7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_7_selector" />

                <ImageButton
                    android:id="@+id/iv8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_8_selector" />

                <ImageButton
                    android:id="@+id/iv9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_9_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNumsMiddle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/iv4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_4_selector" />

                <ImageButton
                    android:id="@+id/iv5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_5_selector" />

                <ImageButton
                    android:id="@+id/iv6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_6_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNumsBtm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/iv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_1_selector" />

                <ImageButton
                    android:id="@+id/iv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_2_selector" />

                <ImageButton
                    android:id="@+id/iv3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_3_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNumsDel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/iv0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_0_selector" />

                <ImageButton
                    android:id="@+id/ivDel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputpad_btn_selector"
                    android:src="@drawable/smallkeyboard_del_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ivClear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_clear_selector"
                android:src="@drawable/large_clear_selector" />

            <TextView
                android:id="@+id/ivSubmit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="26sp"
                android:background="@drawable/inputpad_btn_submit_selector"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/widgetKeyboard"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/keyboard" 
        android:visibility="gone"/>

</com.wizarpos.pay.view.precent.PercentRelativeLayout>