<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_white">

    <RelativeLayout
        android:id="@+id/rel_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/base_layout_recyclerview_wrap"></include>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_bar_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_detail"
        android:layout_marginTop="30dp">

        <include layout="@layout/widget_custom_barcode_view"></include>
    </RelativeLayout>
</RelativeLayout>