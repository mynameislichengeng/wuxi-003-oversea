<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="match_parent">
            <!--<ImageView
                android:layout_width="18dp"
                android:layout_height="1px"
                android:background="#D8D8D8"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>-->
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#D8D8D8" />

            <ImageView
                android:id="@+id/ivTranlogIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/ic_xiaofei" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="1px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#D8D8D8" />

            <ImageView
                android:id="@+id/ivLastBottomLine"
                android:layout_width="18dp"
                android:layout_height="1px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="#D8D8D8"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlItemContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D8D8D8"
                android:layout_alignParentTop="true"/>-->
            <TextView
                android:id="@+id/tvTranType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="消费"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTranMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/tvTranType"
                android:text="支付宝"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTranDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTranType"
                android:text="08:39:21"
                android:textColor="#B7B7B7" />

            <ImageView
                android:id="@+id/ivArrowRight"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_down" />

            <TextView
                android:id="@+id/tvTranAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ivArrowRight"
                android:text="800"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTranCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/tvTranAmount"
                android:text="$"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#D8D8D8" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlItemContent"
        android:layout_marginLeft="17dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e9e9e9" />

        <LinearLayout
            android:id="@+id/llDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llTranLogId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/receipt_gen_number" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:paddingLeft="25dp">

                    <TextView
                        android:id="@+id/tvTranLogId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0828394234"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_tranlogid_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTranLogId"
                        android:layout_alignEnd="@id/tvTranLogId"
                        android:text="12312"
                        android:textColor="#000000" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llRecords1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/receipt_number" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:paddingLeft="25dp">

                    <TextView
                        android:id="@+id/tvMasterTranLogId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0828394234"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_MasterTranLogId_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvMasterTranLogId"
                        android:layout_alignEnd="@id/tvMasterTranLogId"
                        android:text="12312"
                        android:textColor="#000000" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBeloweOptName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/opertor_number" />

                <TextView
                    android:id="@+id/tvBeloweOptName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:paddingLeft="25dp"
                    android:text="0dasdadas"
                    android:textColor="#000000" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llItemBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnPrint"
                    style="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue_or_white"
                    android:text="@string/make_up"
                    android:textColor="#0084FF" />

                <Button
                    android:id="@+id/btnRevoke"
                    style="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_blue_press_grey_shen"
                    android:text="@string/refund"
                    android:textColor="@color/white" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp">

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_blue_or_white"
                    android:gravity="center"
                    android:text="@string/tran_detail"
                    android:textColor="#0084FF" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="17dp"
        android:background="#e9e9e9"
        android:visibility="gone" />
</LinearLayout>




