<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.9"
                    android:text="@string/use_wepay"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/wechat_state"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_selector_toggle"
                        android:button="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:alpha="0.9"
                        android:hint="@string/appid"
                        android:text="@string/app_id"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_wechatpay_appid"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:background="@drawable/search_input"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/btn_wechatpay_appid"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/scan_btn" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.9"
                        android:hint="@string/key_secret"
                        android:text="@string/app_key"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/wechatpay_appkey"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:singleLine="true"
                        android:background="@drawable/search_input"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/btn_wechatpay_appkey"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/scan_btn" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.9"
                        android:hint="@string/mch_id"
                        android:text="@string/mchid_id"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_mchid_id"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:alpha="0.6"
                        android:background="@drawable/search_input"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/btn_mcdhid"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/scan_btn" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp" >

                <Button
                    android:id="@+id/btn_wechatpay_confirm"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_ok" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>