<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_normal" >

        <com.wizarpos.pay.common.view.DrawImageView
            android:id="@+id/holoCircularProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp" 
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tvHomeTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="这是标题这是标题"
            android:textSize="@dimen/text_size_small" />

        <com.wizarpos.pay.common.view.RunningTextView
            android:id="@+id/tvHomeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHomeTile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="1111.00"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</RelativeLayout>