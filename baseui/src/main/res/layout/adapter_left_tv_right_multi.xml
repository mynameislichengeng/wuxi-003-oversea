<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_mian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:textColor="@color/text_main_black" />

        <RelativeLayout
            android:id="@+id/rel_right_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <EditText
                android:id="@+id/ed_value_right"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="right"
                android:minWidth="30dp"
                android:paddingRight="5dp"
                android:textColor="@color/text_main_black"
                android:textColorHint="@color/text_main_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_value_right"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:textColor="@color/text_main_grey"
                android:textColorHint="@color/text_main_grey"
                android:textSize="14sp" />

            <com.lc.baseui.widget.spinner.CustomSpinner
                android:id="@+id/sp_value_right"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right" />

            <com.lc.baseui.widget.cb.MultiCheckBox
                android:id="@+id/multi_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <com.lc.baseui.widget.ed.EditToEdit
                android:id="@+id/ed_to_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_right"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        style="@style/line_grey"
        android:layout_below="@id/lin_mian" />

</RelativeLayout>