<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_header_width_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="base_header_left" parent="base_header_width_height">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">@dimen/text_base_header_text</item>
    </style>

    <style name="base_header_center" parent="base_header_width_height">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/text_base_header_title</item>

    </style>

    <style name="base_header_right" parent="base_header_width_height">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_base_header_text</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="base_header_bg">
        <item name="android:background">@color/bg_main_blue</item>
    </style>

</resources>